<div class="row"> 
  <div class="bg-secondary boarder mx-auto  w-auto col-sm-6 offset-sm-3">
    <div class="text-center text-white">
      <h3>ゲーム登録</h3>
    </div>
  </div>
</div>
<div class="row my-5">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @game) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

      <div class="mb-3">
        <%= f.label :title, 'ゲームタイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :producer, '制作者/団体/企業' %>
        <%= f.text_field :producer, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :release, '発売年' %>
        <%= f.date_select :release, {start_year: 1950}%>
      </div>
　　　<div class="mt-5 mx-auto" style="width: 100px;">
      <%= f.submit '登録', class: 'btn btn-primary' %>
    　</div>
    <% end %>
  </div>
</div>