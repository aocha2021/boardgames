<% if games.any? %>
<div class="row justify-content-center">
    <% games.each do |game| %>
 <div class="col-3 border text-center my-5">
       <div><%= game.title %></div>
       <div><%= link_to 'ゲーム詳細', game_path(game), class: "text-decoration-none" %></div>
 </div>
    <% end %>
</div>
<ul class="pagination justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</ul>
<% end %>
