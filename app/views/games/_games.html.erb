<% if games.any? %>
  <ul class="list-unstyled">
    <% games.each do |game| %>
      <li class="my-5 d-flex">
        <div>
          <div>
            <%= game.title %>
          </div>
          <div>
            <p><%= link_to 'ゲーム詳細', game_path(game), class: "text-decoration-none" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>