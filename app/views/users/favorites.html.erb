<%= render 'relationships/follow_button', user: @user %>
<div class="bg-secondary boarder mx-auto  mb-5 boarder" style="width: 200px;">
    <div class="text-center text-white">
      <%= @user.name %>
    </div>
</div>
<div>
    <ul class="nav nav-tabs nav-justified my-5">
      <li class="nav-item"><a href="#" class="nav-link">レビュー一覧</a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー  <span class="badge bg-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー  <span class="badge bg-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= favorites_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(favorites_user_path(@user)) %>">お気に入りゲーム  <span class="badge bg-secondary"><%= @count_favorites %></span></a></li>
    </ul>
    <%= render 'games/games', games: @likes %>
</div>
