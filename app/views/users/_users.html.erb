<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="my-5 d-flex">
        <div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールへ', user_path(user), class: "text-decoration-none" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>