<% if reviews.any? %>
  <% reviews.each do |review| %>
　<div class="border mx-auto p-4" style="max-width: 800px">
    <div class="row no-gutters align-items-center">

        <div class="col-sm-4">
        	<h3 class=""><%= link_to review.game.title, game_path(review.game), class: "text-decoration-none" %> </h3>
        </div>
        <div class="col-sm-8">
        	<h5 class=""><%= link_to review.user.name, user_path(review.user), class: "text-decoration-none" %> </h5>
          <p class=""><%= review.content %></p>
          <div class="row">
            <div class="col small border text-center">デザイン</div>
            <div class="col small border text-center">運</div>
            <div class="col small border text-center">手軽さ</div>
            <div class="col small border text-center">戦略性</div>
            <div class="col small border text-center">チーム性</div>
          </div>
          <div class="row">
            <div class="col small text-center"><span><%= review.design %>点</span></div>
            <div class="col small text-center"><span><%= review.luck %>点</span></div>
            <div class="col small text-center"><span><%= review.easy %>点</span></div>
            <div class="col small text-center"><span><%= review.strategy %>点</span></div>
            <div class="col small text-center"><span><%= review.teamwork %>点</span></div>
          </div>
          <span class="pt-5"><%= review.created_at %></span>
        </div>
    </div>
　</div>
　<% end %>
<% end %>