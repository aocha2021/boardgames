<% if current_user.favorite?(game) %>
  <%= form_with(model: current_user.likes.find_by(game_id: game.id), method: :delete) do |f| %>
    <%= hidden_field_tag :game_id, game.id %>
    <div class="text-center">
    <%= f.submit '解除', class: 'btn btn-danger  mx-auto　d-block mb-5' %>
    </div>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build) do |f| %>
    <%= hidden_field_tag :game_id, game.id %>
    <div class="text-center">
    <%= f.submit '登録', class: 'btn btn-primary 　mx-auto　d-block mb-5' %>
    </div>
  <% end %>
<% end %>